<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/save_path"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="com.apap.pom.MainActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/tv_save_path_line"
        android:background="@color/colorOrange" />

    <TextView
        android:id="@+id/distance_message_to_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        tools:textColorLink="#448aff" />

    <TextView
        android:id="@+id/tag_locations_message_to_user"
        android:text ="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

</LinearLayout>